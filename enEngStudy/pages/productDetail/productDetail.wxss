.container{
  flex: 1;
  display: flex;
  flex-direction: column;
}

.scroll-out{
  flex: 1;
}

.scroll{
  display: flex ;
  height: 80%;
}

.scroll-view{
  display: flex ;
  flex-direction: column ;
  width: 100% ;
  align-items: center;
}

.main-img{
  width: 100%;
  height: 200px ;
}

.bottom-btn{
  height: 50px;
  background-color: red;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom-btn-tx{
  color:white;
  font-size:16px;
}

.product-field-row{
   display: flex;
  flex-direction: row;
  height: 40px ;
  align-items: center;
  width: 100%;
}

